{% extends "base.html.twig" %}

{% block body %}
    <center id="buttons">
        </br>
        <button id="loginButton" class="col-md-6 btn btn-outline-secondary">Iniciar sesion</button>
        </br></br>
        <button id="checkInButton" class="col-md-6 btn btn-outline-secondary">Registrarse</button>
    </center>
    <center id="loginDiv">
        <form action="{{ path('login_check') }}" method="post" onsubmit="return validateLogIn()">
            <input id="logInEmail" type="text" name="email" class="col-md-6 btn btn-outline-secondary" placeholder="Email" maxlength="50">
            </br></br>
            <input id="logInPassword" type="password" name="password" class="col-md-6 btn btn-outline-secondary" placeholder="Contraseña" maxlength="20">
            </br></br>
            <input type="submit" class="col-md-6 btn btn-outline-secondary" value="Entrar">
        </form>
    </center>
    <center id="checkInDiv">
        <form action="{{ path('checkBeforeRoom',{'where': 'existingRoom'}) }}" method="post" id="checkInForm" onsubmit="return validateCheckIn()">
            <input id="checkInEmail" type="text" name="email" class="col-md-6 btn btn-outline-secondary" placeholder="Email" maxlength="50">
            </br></br>
            <input id="checkInNickname" type="text" name="nickname" class="col-md-6 btn btn-outline-secondary" placeholder="Nombre de usuario" maxlength="20">
            </br></br>
            <input id="checkInPassword" type="password" name="password" class="col-md-6 btn btn-outline-secondary" placeholder="Contraseña" maxlength="20">
            </br></br>
            <input id="checkInRepeatPassword" type="password" name="repeatPassword" class="col-md-6 btn btn-outline-secondary" placeholder="Repite la contraseña" maxlength="20">
            </br></br>
           <div id="radioButtonRoom" class="col-md-6  btn-group btn-group-toggle" data-toggle="buttons">
                <label  id="radioButtonRoomExistingRoom" name="room" class="col-md-6  btn btn-outline-secondary active">
                    <input type="radio" name="room" autocomplete="off" checked>Sala existente 
                </label>
                <label id="radioButtonRoomNewRoom" name="room" class="col-md-6  btn btn-outline-secondary">
                    <input type="radio" name="room" autocomplete="off">Nueva sala
                </label>
            </div>
            </br></br>
            <div id="behindSubmit" class="col-md-6  btn-group" data-toggle="buttons">
                <button class="col-md-6  btn btn-outline-secondary">Atras</button>
                <button type="submit" class="col-md-6  btn btn-outline-secondary">Registrarse</button>
            </div>
        </form>
    </center>
 
{% endblock %}
{% block javascripts %}
    {{ parent() }}
       <script>
        $(document).ready(function(){
            //Mostrar formLogin
            $("#loginButton").click(function(){
                document.getElementById("buttons").style.visibility = "hidden";
                document.getElementById("buttons").style.display= "none";
                setTimeout(function(){
                    $("#buttons").fadeOut(); 
                },0);
                setTimeout(function(){
                    $(".logIn").fadeIn(400);
                    document.getElementById("loginDiv").style.visibility = "visible";
                    document.getElementById("loginDiv").style.display = "block";
                }, 450); 
            });
            //Mostrar formCheckIn
            $("#checkInButton").click(function(){
                document.getElementById("buttons").style.visibility = "hidden";
                document.getElementById("buttons").style.display = "none";
                setTimeout(function(){
                   $("#buttons").fadeOut(); 
                },0);
                setTimeout(function(){
                    $(".checkIn").fadeIn(400);
                    document.getElementById("checkInDiv").style.visibility = "visible";
                    document.getElementById("checkInDiv").style.display = "block";
                }, 450); 
            });
            $('#radioButtonRoomNewRoom').click(function(){
                document.getElementById("radioButtonRoomExistingRoom").className ="col-md-6  btn btn-outline-secondary";
                document.getElementById("radioButtonRoomNewRoom").className ="col-md-6  btn btn-outline-secondary active";
                document.getElementById("checkInForm").action="{{ path('checkBeforeRoom',{'where': 'newRoom'}) }}";
            });
            $('#radioButtonRoomExistingRoom').click(function(){
                document.getElementById("radioButtonRoomNewRoom").className ="col-md-6  btn btn-outline-secondary";
                document.getElementById("radioButtonRoomExistingRoom").className ="col-md-6  btn btn-outline-secondary active";
                document.getElementById("checkInForm").action="{{ path('checkBeforeRoom',{'where': 'existingRoom'}) }}";
            });
        });
        function validateCheckIn(){
            ready = true;
            if(notRightEmail("checkInEmail") || (document.getElementById("checkInEmail").value.length<5 || document.getElementById("checkInEmail").value.length>50)){
                itsWrong('checkInEmail', 'No es un email correcto');
                ready=false;
            }
            else{
                itsWell("checkInEmail");
            }
            if(document.getElementById('checkInNickname').value.length<3 || document.getElementById('checkInNickname').value.length>20){
                itsWrong('checkInNickname', 'No es un nombre de usuario correcto');
                ready=false;
            }
            else{
                itsWell("checkInNickname");
            }
            if(notRightPassword('checkInPassword') || (document.getElementById('checkInPassword').value.length<8 || document.getElementById('checkInPassword').value.length>20)){
                itsWrong('checkInPassword', 'La contraseña debe tener minimo 8 caracteres');
                ready=false;
            }
            else{
                itsWell("checkInPassword");
            }
            return ready;
        }
        function validateLogIn(){
            ready = true;
            if(notRightEmail("logInEmail") || (document.getElementById("logInEmail").value.length<5 || document.getElementById("logInEmail").value.length>50)){
                itsWrong('logInEmail', 'No es un email correcto');
                ready=false;
            }
            else{
                itsWell("logInEmail");
            }
            if(notRightPassword('logInPassword') || (document.getElementById('logInPassword').value.length<8 && document.getElementById('logInPassword').value.length>20)){
                itsWrong('logInPassword', 'No es una contraseña correcta');
                ready=false;
            }
            else{
                itsWell("logInPassword");
            }
            return ready;
        }
        function notRightEmail(id){
            campo = document.getElementById(id).value;
            emailRegex =/^[-\w.%+]{1,64}@(?:[A-Z0-9-]{1,63}\.){1,125}[A-Z]{2,63}$/i;
            if (emailRegex.test(campo)) {
                return false;
            }
            else{
                return true;
            }
        }
        function notRightPassword(id){
            long = document.getElementById(id).length;
            if(long<8) return true;
            else return false;
        }
        function itsWrong(id, message){
            document.getElementById(id).style.backgroundColor="#8B0000";
            document.getElementById(id).value="";
            document.getElementById(id).placeholder=message;
        }
        function itsWell(id){
            document.getElementById(id).style.className="col-md-6 btn btn-outline-secondary";
        }
        function distinctPassword(){
            pass1 = document.getElementById('checkInPassword').value;
            pass2 = document.getElementById('checkInRepeatPassword').value;
            if(pass1 != pass2) return true;
            else return false;
        }
    </script>
{% endblock %}