{% block title %}Welcome to "HERE"{% endblock %}

{% block body %}
    <div id="buttons">
        </br>
        <button class="welcomeButton">Iniciar sesion</button>
        </br>
        <button class="welcomeButton">Registrarse</button>
    </div>
    <p id="palabra_a_salir" style="visibility: hidden">Holaaaa</p>
    
{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $("p").fadeOut();
        $(document).ready(function(){
            $(".welcomeButton").click(function(){
                $("#buttons").fadeOut(); 
                document.getElementById("palabra_a_salir").style.visibility = "visible";
                setTimeout(function(){
                    $("p").fadeIn();
                }, 500); 
            });
        });
    </script>
{% endblock %}